<div class="container">
  <h1>New game</h1>
  <div class="letter-board">
    <% @letters.each do |letter| %>
      <div class="letter">
        <p><%= letter %></p>
      </div>
    <% end %>
  </div>

  <h3>What is the longest word you can find?</h3>
  <form action="/new" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters_board, @letters %>
    <div class="answer-wrapper">
      <input type="text" name="longest-word" id="answer-field">
      <input type="submit" value="Play!" id="answer-button">
    </div>
  </form>
</div>
